<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/itemViTien">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="4"
        android:id="@+id/pnRowTiitle">

        <TextView
            android:id="@+id/itemViTien_txtSTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STT"
            android:textColor="@color/black"

            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/itemViTien_txtTenVi"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tên ví"
            android:textColor="@color/mometum"

            android:gravity="center"
            android:textSize="12pt"
            android:layout_toRightOf="@+id/itemViTien_txtSTT"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/itemViTien_txtSoDu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số dư"
            android:textColor="@color/xanhngoc"

            android:gravity="center"
            android:textSize="12pt"
            android:layout_toRightOf="@+id/itemViTien_txtTenVi"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/pnRowTiitle"/>


</RelativeLayout>