<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKy">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pnSymbol"
            android:layout_marginBottom="30dp"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sothuchi_misa"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgMISA"
                ></ImageView>
            <TextView
                android:id="@+id/labelDangNhap"
                android:layout_below="@id/imgMISA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sổ Thu Chi MISA"
                android:textSize="7pt"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/dangKyHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/custtom_edittextt"
            android:layout_below="@id/pnSymbol"
            android:hint="Nhập họ tên..."
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="70dp"
            android:textSize="8pt" />
        <EditText
            android:id="@+id/dangKySDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custtom_edittextt"
            android:layout_below="@id/dangKyHoTen"
            android:hint="Nhập số điện thoại..."
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="70dp"
            android:textSize="8pt" />
        <EditText
            android:id="@+id/dangKyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custtom_edittextt"
            android:layout_below="@id/dangKySDT"
            android:hint="Nhập email..."
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="70dp"
            android:textSize="8pt" />
        <EditText
            android:id="@+id/dangKyMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custtom_edittextt"
            android:layout_below="@id/dangKyEmail"
            android:hint="Nhập mật khẩu..."
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="70dp"
            android:password="true"
            android:textSize="8pt" />
        <EditText
            android:id="@+id/dangKyXacNhanMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custtom_edittextt"
            android:layout_below="@id/dangKyMatKhau"
            android:hint="Xác nhận mật khẩu..."
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="70dp"
            android:password="true"
            android:textSize="8pt" />
        <Button
            android:id="@+id/btnDangKyTaiKhoan"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dangKyXacNhanMatKhau"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textSize="7pt"
            android:background="@drawable/custorm_buttom_2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDangKyTaiKhoan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Hoặc đăng nhập bằng"
            android:textColor="@color/black"
            android:textSize="6pt"
            android:id="@+id/lblDangNhapKhac"
            />
        <RelativeLayout
            android:id="@+id/pnDangNhapKhac"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lblDangNhapKhac">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/facebook_2"
                android:id="@+id/btnFacebook"
                ></ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/google"
                android:id="@+id/btnGoogle"
                ></ImageView>
        </RelativeLayout>

    </RelativeLayout>











</RelativeLayout>