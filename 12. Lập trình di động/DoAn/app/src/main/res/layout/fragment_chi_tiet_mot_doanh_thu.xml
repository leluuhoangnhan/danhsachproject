<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    tools:context=".ChiTietMotDoanhThuFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/taikhoan_img"
        android:background="@drawable/background_white"
        android:id="@+id/pnThongTin"
        android:layout_margin="30dp">
        <TextView
            android:id="@+id/chiTietMotDoanhThu_txtTenDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên doanh thu"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/chiTietMotDoanhThu_txtSoTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tiền"
            android:layout_below="@id/chiTietMotDoanhThu_txtTenDT"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotDoanhThu_txtLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại"
            android:layout_below="@id/chiTietMotDoanhThu_txtSoTien"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotDoanhThu_txtTenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên loại"
            android:layout_below="@id/chiTietMotDoanhThu_txtLoai"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotDoanhThu_txtThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian"
            android:layout_below="@id/chiTietMotDoanhThu_txtTenLoai"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotDoanhThu_txtTenVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên ví"
            android:layout_below="@id/chiTietMotDoanhThu_txtThoiGian"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>




</LinearLayout>