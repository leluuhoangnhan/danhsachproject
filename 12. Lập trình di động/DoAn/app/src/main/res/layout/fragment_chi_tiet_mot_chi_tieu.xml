<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    tools:context=".ChiTietMotChiTieuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/taikhoan_img"
        android:background="@drawable/background_white"
        android:id="@+id/pnThongTin"
        android:layout_margin="30dp">
        <TextView
            android:id="@+id/chiTietMotChiTieu_txtTenCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên chi tiêu"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/chiTietMotChiTieu_txtSoTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chiTietMotChiTieu_txtTenCT"
            android:text="Số tiền"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotChiTieu_txtLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chiTietMotChiTieu_txtSoTien"
            android:text="Loại"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotChiTieu_txtTenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chiTietMotChiTieu_txtLoai"
            android:text="Tên loại"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotChiTieu_txtThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chiTietMotChiTieu_txtTenLoai"
            android:text="Thời gian"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/chiTietMotChiTieu_txtTenVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chiTietMotChiTieu_txtThoiGian"
            android:text="Tên ví"
            android:textSize="12pt"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>


</LinearLayout>